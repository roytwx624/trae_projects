{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "(?!src).*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Explicitly map root path to index.html
    {
      "src": "/",
      "dest": "/index.html"
    },
    // Keep existing API route
    {
      "src": "/api/(.*)",
      "dest": "src/index.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    // Catch-all for other static files
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}