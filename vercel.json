{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**/*"] }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}